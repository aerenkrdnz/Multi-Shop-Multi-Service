@model CreateFeatureSliderDto

@{
    ViewData["Title"] = "CreateFeatureSlider";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}


<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <h4>Öne Çıkan Görsel Ekleme Sayfası</h4>
                <p>Öne Çıkan Görsel ile ilgili ekleme işlemlerinizi aşağıdaki panel üzerinden gerçekleştirebilirsiniz.</p>
                <div class="bs-example" data-example-id="bordered-table">

                    <form method="post">
                        <label>Görsel Başlığı</label>
                        <input type="text" class="form-control" asp-for="Title" />
                        <br />
                        <label>Görsel Açıklaması</label>
                        <input type="text" class="form-control" asp-for="Description" />
                        <br />
                        <label>Görsel Linki</label>
                        <input type="text" class="form-control" asp-for="ImageUrl" />
                        <br />
                        <button class="btn btn-primary">Öne Çıkan Görsel Ekle</button>
                    </form>

                </div>
            </div>
        </div>

    </div>
</section>
